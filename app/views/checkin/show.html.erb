<h1>Check-in System</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Date</th>
      <th scope="col">Customer</th>
      <th scope="col">Technician</th>
      <th scope="col">Services</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= @checkin.date%></td>
      <td>
        <a
          href="customers/<%= @checkin.customers[0].id %>"><%= @checkin.customers[0].first_name + ' ' + @checkin.customers[0].last_name%></a>
      </td>
      <td>
        <% name = []%>
        <% @checkin.technicians.each do |technician|%>
        <% name.take(technician.name)%>
        <% end %>
        <%= name.pop%>
      </td>
      <td>
        <% @checkin.services.each do |service|%>
        <%= service.name + ' ,'%>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>